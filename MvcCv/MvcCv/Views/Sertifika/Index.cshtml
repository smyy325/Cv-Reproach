@using MvcCv.Models.Entity
@model List<TblSertfikalarim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                                <div class="tab-pane" id="timeline">
                                    <!-- The timeline -->
                                    <div class="timeline timeline-inverse">
                                        <!-- timeline time label -->
                                        @foreach (var item in Model)
                                        {
                                            
                                        <div class="time-label">
                                            <span class="bg-info">
                                                @item.Date
                                            </span>
                                        </div>
                                        <!-- /.timeline-label -->
                                        <!-- timeline item -->
                                        <div>
                                            <a href="/Sertifika/SertifikaGetir/@item.ID" class="btn btn-warning">
                                                <i class="fas fa-comments bg-warning"></i>
                                            </a>
                                            <div class="timeline-item">
                                                <div class="timeline-body">
                                                    @item.Explanation
                                                </div>
                                                @*<div class="timeline-footer">
                                                    <a href="#" class="btn btn-primary btn-sm">Düzenle</a>
                                                    <a href="#" class="btn btn-danger btn-sm">Sil</a>
                                                </div>*@
                                            </div>
                                        </div>
                                        }
                                    </div>
                                    <a href="/Sertifika/SertifikaEkle" class="btn btn-outline-info">Yeni Sertifika Girişi</a>
                                </div>
                            </div>
                            <!-- /.tab-content -->
                        </div><!-- /.card-body -->
                    </div>
                    <!-- /.nav-tabs-custom -->
                </div>
                <!-- /.col -->
            </div>
    </section>
</body>
</html>